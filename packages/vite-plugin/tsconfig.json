{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES6",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "declaration": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
